@model RestaurantRaterMVC.Models.Ratings.RatingCreate

@{
    string title = "Rate a Restaurnat";
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.RestaurantId)
                @Html.EditorFor(model => model.RestaurantId)
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Score)
                @Html.EditorFor(model => model.Score)
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rate!" class="btn btn-primary" />
            </div>
        </form>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}